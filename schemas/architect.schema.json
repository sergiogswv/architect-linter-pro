{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Architect Linter Pro Configuration",
    "description": "Configuration schema for architect-linter-pro",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string",
            "description": "URL to the JSON Schema for this file"
        },
        "max_lines_per_function": {
            "type": "integer",
            "description": "Maximum number of lines allowed per function",
            "default": 40,
            "minimum": 1
        },
        "architecture_pattern": {
            "type": "string",
            "description": "The architectural pattern to enforce",
            "enum": [
                "Hexagonal",
                "Clean",
                "MVC",
                "Ninguno"
            ],
            "default": "Ninguno"
        },
        "forbidden_imports": {
            "type": "array",
            "description": "List of forbidden import rules",
            "items": {
                "type": "object",
                "properties": {
                    "from": {
                        "type": "string",
                        "description": "Source path or pattern (glob support depends on implementation)"
                    },
                    "to": {
                        "type": "string",
                        "description": "Target path or pattern that should not be imported from 'from'"
                    }
                },
                "required": [
                    "from",
                    "to"
                ]
            },
            "default": []
        },
        "ignored_paths": {
            "type": "array",
            "description": "Paths to ignore during analysis",
            "items": {
                "type": "string"
            },
            "default": [
                "node_modules/",
                ".git/",
                "dist/",
                "build/",
                "target/",
                "coverage/"
            ]
        },
        "build_command": {
            "type": "string",
            "description": "Command to run to verify the build after applying fixes (e.g., 'npm run build')"
        },
        "ai_fix_retries": {
            "type": "integer",
            "description": "Maximum number of AI retries for fixing build or syntax errors",
            "default": 3,
            "minimum": 0
        }
    },
    "required": [
        "max_lines_per_function",
        "architecture_pattern",
        "forbidden_imports"
    ],
    "additionalProperties": false
}